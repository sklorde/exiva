# Baileys Service Configuration

# Server settings
PORT=3000
HOST=0.0.0.0

# Log level (trace, debug, info, warn, error, fatal)
LOG_LEVEL=info

# WhatsApp settings
BROWSER_NAME=WIFE WhatsApp Service

# Connection retry settings
MAX_CONNECTION_RETRIES=10
RETRY_DELAY_MS=3000
MAX_RETRY_BACKOFF_MS=30000

# WIFE API
WIFE_API_URL=http://wife-api:8000
WIFE_API_TOKEN=

# Monitored chats (comma-separated). Prefer JIDs (e.g. 5511999999999@s.whatsapp.net or group: 12345-67890@g.us)
MONITORED_CHATS=55XXXXXXXXX@s.whatsapp.net,Bruno

# If true, match only JIDs. If false, will also attempt to match pushName and conversation
MONITOR_BY_JID_ONLY=true
